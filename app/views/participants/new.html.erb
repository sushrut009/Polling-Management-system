<% provide(:title, 'Enter your information') %>
<h1>Enter Participant's Information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= form_for(@participant, url: {action: "create"}) do |f| %>
      <%= render 'shared/error_participant_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :major %>
      <%= f.text_field :major, class: 'form-control' %>

      <%= f.label :user %>
      <%= f.text_field :user_id, class: 'form-control' %>

      

      <%= f.submit "Proceed to Poll",  class: "btn btn-primary" %>
   <% end %>
  </div>
</div>